{
  "name": "vite.studio",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "16"
  },
  "main": "dist/functions/index.js",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev src/server/server.ts",
    "start": "node dist/server/server.js",
    "start:vite": "functions-framework --target=vite",
    "start:helloWorld": "functions-framework --target=helloWorld",
    "watch:vite": "concurrently \"tsc -w\" \"nodemon --watch ./dist/ --exec pnpm start:vite\"",
    "watch:helloWorld": "concurrently \"tsc -w\" \"nodemon --watch ./dist/ --exec pnpm start:helloWorld\"",
    "deploy:vite": "gcloud functions deploy vite --region=us-central1 --runtime=nodejs16 --verbosity=debug --trigger-http --allow-unauthenticated",
    "deploy:helloWorld": "gcloud functions deploy helloWorld --region=us-central1 --runtime=nodejs16 --verbosity=debug --trigger-http --allow-unauthenticated",
    "clean": "rimraf dist",
    "build": "run-s clean build:ts build:lib:client build:lib:server",
    "build:ts": "tsc --project tsconfig.build.json",
    "build:lib:client": "vite build --outDir dist/public",
    "build:lib:server": "vite build --outDir dist/lib --ssr src/lib/server.tsx",
    "format": "prettier **/*.{ts,tsx,scss} --write"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet-async": "^1.2.2",
    "rimraf": "^3.0.2",
    "sass": "^1.45.2",
    "serve-static": "^1.14.2",
    "vite": "^2.7.10"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^2.1.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.7",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@vitejs/plugin-react": "^1.1.3",
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  }
}