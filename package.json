{
  "name": "vite.studio",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "16"
  },
  "main": "dist/functions/index.js",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev src/server/server.ts",
    "start": "node dist/server/server.js",
    "start:vite": "functions-framework --target=vite",
    "watch:vite": "concurrently \"tsc -w\" \"nodemon --watch ./dist/ --exec pnpm start:vite\"",
    "build": "run-s clean build:typescript build:site build:app",
    "build:typescript": "tsc --project tsconfig.build.json",
    "build:site": "vite build --outDir dist/public",
    "build:app": "vite build --outDir dist/app --ssr src/app/render.tsx",
    "deploy:functions": "gcloud functions deploy vite-studio --entry-point=vite --region=us-central1 --runtime=nodejs16 --trigger-http --allow-unauthenticated",
    "deploy:tag": "gcloud builds submit --tag gcr.io/steel-mantra-336800/vite-studio",
    "deploy:image": "gcloud run deploy vite-studio --image gcr.io/steel-mantra-336800/vite-studio --region=us-central1",
    "deploy:cloud-run": "run-s build deploy:tag deploy:image",
    "clean": "rimraf dist",
    "format": "prettier **/*.{ts,tsx,scss} --write"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "compression": "^1.7.4",
    "contentful": "^9.1.6",
    "express": "^4.17.2",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet-async": "^1.2.2",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1",
    "rimraf": "^3.0.2",
    "sass": "^1.47.0",
    "serve-static": "^1.14.2",
    "vite": "^2.7.10"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^2.1.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-router": "^5.1.18",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^1.1.4",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.12",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4",
    "vite-plugin-compression": "^0.4.0"
  }
}