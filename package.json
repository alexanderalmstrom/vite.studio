{
  "name": "vite.studio",
  "version": "0.0.1",
  "main": "dist/server/server.js",
  "scripts": {
    "dev": "ts-node-dev src/server/server",
    "build": "run-s clean build:server build:entry:client build:entry:server",
    "clean": "rimraf dist",
    "build:server": "tsc --project tsconfig.build.server.json",
    "build:entry:client": "vite build --outDir dist/client",
    "build:entry:server": "vite build --outDir dist/server --ssr src/entry/server.tsx ",
    "start": "node dist/server",
    "format": "prettier **/*.{js,ts,tsx,scss} --write"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.17.2",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1",
    "rimraf": "^3.0.2",
    "sass": "^1.45.1",
    "server-static": "^2.0.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.6",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.11",
    "@vitejs/plugin-react": "^1.0.7",
    "prettier": "^2.5.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4",
    "vite": "^2.7.2"
  }
}